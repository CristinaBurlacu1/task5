Clasa Computer:
package edu.tekwill.academy.computer;

import edu.tekwill.academy.computer.components.*;
import edu.tekwill.academy.computer.peripherals.*;

public class Computer {
    // Atribute din pachetul components
    public Processor processor;
    public Motherboard motherboard;
    public HardDrive hardDrive;

    // Atribute din pachetul peripherals
    public Monitor monitor;
    public Mouse mouse;
    public Keyboard keyboard;

    public static void main(String[] args) {
        // Inițializarea unui obiect Computer
        Computer computer = new Computer();

        // Exemplu de utilizare (inițializările propriu-zise pot varia)
        computer.processor = new Processor();
        computer.motherboard = new Motherboard();
        computer.hardDrive = new HardDrive();
        computer.monitor = new Monitor();
        computer.mouse = new Mouse();
        computer.keyboard = new Keyboard();

        // Exemplu de afișare
        System.out.println("Computer initialized with all components and peripherals.");
    }
}

